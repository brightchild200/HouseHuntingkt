<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5dc">

    <!-- Back Arrow -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="75dp"
        android:layout_height="61dp"
        android:clickable="true"
        android:contentDescription="Back"
        android:focusable="true"
        android:padding="16dp"
        android:src="@drawable/arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- ImageView -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="277dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollvashi1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backArrow"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wobg" />

    <!-- ScrollView -->
    <ScrollView
        android:id="@+id/scrollvashi1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintBottom_toTopOf="@+id/buttonLayout">

        <!-- Wrap content inside a LinearLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- CardView with image -->
            <androidx.cardview.widget.CardView
                android:id="@+id/searchBarCard"
                android:layout_width="371dp"
                android:layout_height="194dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/pg2"
                    tools:ignore="ContentDescription" />
            </androidx.cardview.widget.CardView>

            <!-- Rent Details -->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. 15000 / Month"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/crossiantone_regular"
                android:text="Kathani PG Residency, Nerul, Navi Mumbai \n ðŸ“Near SIES and DY Patil University."
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/zillaslab_semibolditalic"
                android:layout_marginTop="8dp"
                android:text="Welcome to Kathani Housing Society, a well-maintained residential property located in the heart of Nerul, one of the most sought-after localities in Navi Mumbai. The society offers a blend of comfort, convenience, and community living, making it an ideal choice for families, working professionals, and students."
                android:textSize="19dp" />

            <!-- PG Details ConstraintLayout -->
            <androidx.cardview.widget.CardView
                android:id="@+id/constraintLayout"
                android:layout_width="371dp"
                android:layout_height="280dp"
                android:layout_marginTop="11dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">

                    <!-- PG Details Title -->
                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="PG Details"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <!-- PG Information -->
                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/black"

                        android:text="ðŸ›ï¸ Occupancy: Single, Double, and Triple sharing available.\nðŸ½ï¸ Amenities: Free Wi-Fi, 24/7 water supply, power backup, kitchen access, and home-cooked food services."
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView8" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/black"

                        android:text="ðŸ“º Additional Facilities: TV, attached bathroom, and common study area\nðŸš¶ Accessibility: Walking distance to the Nerul Railway Station and nearby markets."
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView9" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

<!--            <FrameLayout-->
<!--                android:id="@+id/mapContainer"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="300dp"-->
<!--                android:layout_marginTop="16dp"/>-->

        </LinearLayout>
    </ScrollView>

    <!-- Buttons for Contact and Rent -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Call Button -->
        <Button
            android:id="@+id/call"
            android:layout_width="145dp"
            android:layout_height="49dp"
            android:text="Contact Owner" />

        <!-- Rent Button -->
        <Button
            android:id="@+id/rent"
            android:layout_width="155dp"
            android:layout_height="49dp"
            android:layout_marginStart="16dp"
            android:text="Rent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
